<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="loginText">
        <item name="android:text">Login</item>
        <item name="android:textColor">#3D3B35</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">32sp</item>
        <item name="fontFamily">Circular Std</item>
    </style>

    <style name="registerPage">
        <item name="android:text">Register</item>
        <item name="android:textColor">#3D3B35</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">32sp</item>
        <item name="fontFamily">Circular Std</item>
    </style>

    <style name="welcomeQouti">
        <item name="android:text">Hello, Welcome back to Quoti</item>
        <item name="android:textColor">#989898</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">Circular Std</item>
    </style>

    <style name="forgotPassword">
        <item name="android:text">@string/forgotPassword</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">italic|bold</item>
        <item name="fontFamily">Circular Std</item>
        <item name="lineHeight">14dp</item>
        <item name="android:weightSum">700 </item>
    </style>

    <style name="button">
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">Circular Std</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="socialMedia">
        <item name="android:text">Or via Social media</item>
        <item name="android:textColor">#989898</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAlignment">center</item>
        <item name="fontFamily">Circular Std</item>
    </style>

    <style name="register">
        <item name="android:textColor">#3D3B35</item>
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">Circular Std</item>
        <item name="lineHeight">14dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:weightSum">700 </item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="termCondition">
        <item name="android:textColor">#3D3B35</item>
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">Circular Std</item>
        <item name="lineHeight">22dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:weightSum">700 </item>
        <item name="android:textSize">15sp</item>
    </style>




</resources>